!!!
%html
  %head
    %title TwitterBootstrapDemo
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body

    .topbar
      .topbar-inner
        .container
          = link_to 'aarhus.rb', root_path, :class => 'brand'
          %ul.nav
            %li.active= link_to 'Meetings', meetings_path
            %li= link_to 'Members', meetings_path

    .container

      - if flash.present?
        .alert-message.success
          = flash[:notice] if flash[:notice].present?
          %a.close{:href => '#'} x

      = yield
